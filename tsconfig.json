{
    "compilerOptions": {
        "allowJs": false,
        "target": "es6",
        // "moduleResolution": "node",
        // "lib": ["es5", "es6", "dom", "dom.iterable", "esnext"],
        "noLib": false,
        "lib": ["ESNext", "dom"],
        "sourceMap": true,
        // "module": "commonjs",
        "module": "ESNext",
        "strict": true,
        "declaration": true,
        "noImplicitOverride": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    }
    // "include": ["./", "**/*.d.ts"]
}
